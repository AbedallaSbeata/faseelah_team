<%- include('../layout', { title, active, body: `
<section>
  <h1>Our Team</h1>

  <div class="team-grid">
    ${teamMembers.map(m => `
      <article class="member">
        <div class="member-header">
          <h3 class="member-name"><span>${m.name}</span></h3>
          <span class="member-role">${m.role}</span>
        </div>
        <p class="member-bio">${m.bio}</p>
      </article>
    `).join('')}
  </div>
</section>
` }) %>
