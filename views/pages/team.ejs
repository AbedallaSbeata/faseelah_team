<%- include('../layout', { title, active, body: `
<section>
  <h1>Our Team</h1>
  <div class="team-grid">
    ${teamMembers.map(m => `
      <div class="member">
        <img src="${m.avatar}" alt="${m.name}" />
        <h3>${m.name}</h3>
        <p class="role">${m.role}</p>
        <p>${m.bio}</p>
      </div>
    `).join('')}
  </div>
</section>
` }) %>
